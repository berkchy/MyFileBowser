{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/api/files",
      "dest": "server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "server.js?file=$1",
      "headers": {
        "Content-Disposition": "attachment"
      }
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}